#our test site
server {
	listen localhost
	port 8080
	server_name localhost
	client_max_body_size 2048
	file_upload on
	root /Users/amyroshn/Documents/webserv/test_pages/our_site
	#usr/site/www
    autoindex        on     
	methods POST GET DELETE
	index index.html index.php
	location /// {
	    root suka
	}
	cgi_path php /Users/amyroshn/Documents/webserv/dependencies/php-cgi
	return /folder /test.txt
}

