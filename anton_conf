#our test site
server {
	listen localhost
	port 8080
	server_name localhost
	client_max_body_size 2048
	file_upload on
	root /Users/amyroshn/Documents/webserv/test_pages/our_site
	#usr/site/www
    autoindex        off     
	index index.html index.php
	cgi_path php /Users/amyroshn/Documents/webserv/dependencies/php-cgi
	cgi_path py /Users/amyroshn/Documents/webserv/dependencies/python3 
	
	location /forms/ {
	    methods POST GET
	}
	
	location /python {
	    methods POST
	}
	
	location /body_length/ {
	    methods POST GET
	    client_max_body_size 0
	}
	
	location /autoindex_ok {
	    autoindex on
	}
	
	return /redirection/ /
	
}

#site (with js and animation)
server {
    listen localhost
    server_name site
    port 8080 8081
    root /Users/amyroshn/Documents/webserv/test_pages/site
    index index.html
}

